<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/question1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:adjustViewBounds="true"
            android:src="@drawable/tr" />

        <TextView
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:maxLines="2"
            android:text="@string/question_text"
            android:textSize="@dimen/sp18" />

        <RadioGroup
            android:id="@+id/q1_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16">

            <RadioButton
                android:id="@+id/q1OptA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick1"
                android:text="@string/option_a"
                android:textSize="@dimen/sp18" />

            <RadioButton
                android:id="@+id/q1OptB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick1"
                android:text="@string/option_b"
                android:textSize="@dimen/sp18" />

            <RadioButton
                android:id="@+id/q1OptC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick1"
                android:text="@string/option_c"
                android:textSize="@dimen/sp18" />

            <RadioButton
                android:id="@+id/q1OptD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick1"
                android:text="@string/option_d"
                android:textSize="@dimen/sp18" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/question2"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:adjustViewBounds="true"
            android:src="@drawable/et" />

        <TextView
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:maxLines="2"
            android:text="@string/question_text"
            android:textSize="@dimen/sp18" />

        <RadioGroup
            android:id="@+id/q2_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16">

            <RadioButton
                android:id="@+id/q2OptA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
