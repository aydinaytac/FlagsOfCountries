                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick2"
                android:text="@string/option_d"
                android:textSize="@dimen/sp18" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/question3"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:adjustViewBounds="true"
            android:src="@drawable/kh" />

        <TextView
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:maxLines="2"
            android:text="@string/question_text"
            android:textSize="@dimen/sp18" />

        <RadioGroup
            android:id="@+id/q3_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16">

            <RadioButton
                android:id="@+id/q3OptA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick3"
                android:text="@string/option_a"
                android:textSize="@dimen/sp18" />

            <RadioButton
                android:id="@+id/q3OptB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick3"
                android:text="@string/option_b"
                android:textSize="@dimen/sp18" />

            <RadioButton
                android:id="@+id/q3OptC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="radioButtonOnClick3"
                android:text="@string/option_c"
                android:textSize="@dimen/sp18" />

            <RadioButton
                android:id="@+id/q3OptD"
